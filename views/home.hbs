<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://api-maps.yandex.ru/v3/?apikey=9bfd234f-56de-4b04-8d59-5e5d3a5b9c87&lang=ru_RU" type="text/javascript"></script>
    <title>Document</title>
</head>
<body>
    <div id="app"></div>
</body>
<script>
    window.map = null;

    main();

    async function main() {
        await ymaps3.ready;
        const {
            YMap,
            YMapDefaultSchemeLayer,
            YMapDefaultFeaturesLayer
        } = ymaps3;

        const {YMapDefaultMarker} = await ymaps3.import('@yandex/ymaps3-markers@0.0.1');

        map = new YMap(document.getElementById('app'), {
            location: {center: [54.609428, 53.704385], zoom: 15.05},
            mode: 'vector'
        });

        map.addChild(new YMapDefaultSchemeLayer());
        map.addChild(new YMapDefaultFeaturesLayer({id: 'features'}));

        const marker = new YMapDefaultMarker({ coordinates: [54.609428, 53.704385] });
        map.addChild(marker);
    }
</script>
<style>
    html,
    body,
    #app {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;

        font-family: 'Yandex Sans Text', Arial, Helvetica, sans-serif;
    }
</style>
</html>
